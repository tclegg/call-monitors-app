{
  "name": "callmonitortracking",
  "productName": "Nex-Tech Call Monitor Tracking",
  "description": "Application for tracking call monitors and performance.",
  "version": "2.1.3",
  "main": "main.js",
  "license": "MIT",
  "author": "Nex-Tech Help Desk",
  "build": {
    "appId": "com.electron.callmonitortracking",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.png"
    },
    "publish": [
      {
        "provider": "github"
      }
    ],
    "asarUnpack": [
      "**/log.txt"
    ]
  },
  "devDependencies": {
    "electron": "^2.0.2",
    "electron-builder": "^20.15.3",
    "less": "^3.0.4"
  },
  "dependencies": {
    "ajv": "^6.5.1",
    "bootstrap3": "^3.3.5",
    "dotenv": "^6.0.0",
    "dotenv-expand": "^4.2.0",
    "electron-log": "^2.2.15",
    "electron-updater": "^2.21.10",
    "jquery": "^3.3.1",
    "nedb": "^1.8.0",
    "update-electron-app": "^1.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tclegg/call-monitors-app/"
  },
  "scripts": {
    "start": "npm install && electron .",
    "pack": "build --dir",
    "dist": "build",
    "dev": "SET TODO_DEV=true&& npm install && electron .",
    "postinstall": "electron-builder install-app-deps",
    "release": "build --p always"
  }
}
