{
  "name": "callmonitortracking",
  "productName": "Nex-Tech Call Monitor Tracking",
  "description": "Application for tracking call monitors and performance.",
  "version": "2.5.7",
  "main": "main.js",
  "license": "MIT",
  "author": "Thomas Clegg",
  "build": {
    "appId": "com.electron.callmonitortracking",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": "true"
    },
    "publish": [
      {
        "provider": "github"
      }
    ],
    "asarUnpack": [
      "**/log.txt",
      "**/.env",
      "**/appsettings.json"
    ]
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^2.0.7",
    "electron-builder": "^20.22.0",
    "less": "^3.7.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.1.0",
    "ajv": "^6.5.2",
    "bootstrap": "^4.1.2",
    "dotenv": "^6.0.0",
    "dotenv-expand": "^4.2.0",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.16",
    "electron-settings": "^3.2.0",
    "electron-updater": "^3.0.1",
    "jquery": "^3.3.1",
    "nedb": "^1.8.0",
    "popper.js": "^1.14.3",
    "tether": "^1.4.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tclegg/call-monitors-app/"
  },
  "scripts": {
    "start": "npm install && electron .",
    "pack": "build --dir",
    "dist": "build",
    "dev": "SET TODO_DEV=true&& npm install && electron .",
    "postinstall": "electron-builder install-app-deps",
    "release": "build --p always"
  }
}
